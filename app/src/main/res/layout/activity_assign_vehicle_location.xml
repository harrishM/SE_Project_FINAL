<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assign_vehicle_location">

    <Spinner
        android:id="@+id/select_vehicle"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/Vehicle_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="150dp"

        android:text="assign to"
        android:textSize="25dp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/select_vehicle2"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/Vehicle_display_nam2e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="170dp"

        android:text="from"
        android:textSize="25dp"
        android:textStyle="bold" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="330dp"

        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="250dp"

        android:textSize="15dp"
        android:inputType="text" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="190dp"

        android:text="to"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="330dp"

        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="225dp"
        android:layout_marginRight="80dp"

        android:textSize="15dp"
        android:inputType="text" />

    <Button
        android:id="@+id/vehicle_assignment_confirmation_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Confirm Assignment"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="210dp"
        />


</RelativeLayout>